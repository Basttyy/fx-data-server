RewriteEngine On
# RewriteCond %{REQUEST_URI}  !(\.png|\.jpg|\.webp|\.gif|\.jpeg|\.zip|\.css|\.svg|\.js|\.pdf|\.ico|\.woff2|\.ttf)$
# RewriteRule (.*) server.php [QSA,L]

# Allow specific file extensions to be accessed directly from the public folder
RewriteCond %{REQUEST_URI} !^/public/
RewriteRule ^(.+\.(png|jpg|webp|gif|jpeg|zip|css|svg|js|pdf|ico|woff2|ttf))$ /public/$1 [L]

# Redirect all other requests to server.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule (.*) server.php [QSA,L]

DirectoryIndex server.php